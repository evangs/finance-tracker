<h1><%= @user.full_name %></h1>
<% if current_user.can_add_friend?(@user.id) %>
  <%= link_to 'Follow', friendships_path(friend: @user), class: 'btn btn-xs btn-outline-primary', method: :post %>
<% end %>
<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list', label: 'Tracking' %>
<% else %>
  <div class="alert alert-info" role="alert">
    This user is not tracking any stocks
  </div>
<% end %>

<% if !@user.friends.empty? %>
  <%= render 'friends/list', friends: @user.friends, label: 'Following' %>
<% else %>
  <div class="alert alert-info" role="alert">
    This user is not following anyone
  </div>
<% end %>
